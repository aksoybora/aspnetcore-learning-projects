@model Ogretmen

@{
    ViewData["Title"] = "Öğretmen Sil";
}

<div class="row">
    <div class="col-8 mx-auto">
        <p>
            <h2>Öğretmen Sil</h2>
            <hr>
            <b>@Model.Ad @Model.Soyad isimli öğretmeni silmek istiyor musunuz?</b>

            <form asp-action="Delete" asp-controller="Ogretmen" method="post" class="mt-3">
                <input type="hidden" value="@Model.OgretmenId" name="id">
                <button type="submit" class="btn btn-danger">Evet</button>
                <a asp-action="Index" class="btn btn-primary">Hayır</a>
            </form>
        </p>
    </div>
</div>