@model KursKayit

@{
    ViewData["Title"] = "Kurs Kayıt Ekleme";
}

<h2 class="mb-3">Kurs Kaydı Ekle</h2>
<hr>

<form asp-controller="KursKayit" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="OgrenciId" class="form-label">Öğrenci</label>
        <select asp-items="ViewBag.Ogrenciler" asp-for="OgrenciId" class="form-control">
            <option value="">Seçiniz</option>
        </select>
            
        <label asp-for="KursId" class="form-label mt-3">Kurs</label>
        <select asp-items="ViewBag.Kurslar" asp-for="KursId" class="form-control">
            <option value="">Seçiniz</option>
        </select>

        <button type="submit" style="background-color: #FADA7A;" class="btn mt-3">Kaydet</button>
</form>