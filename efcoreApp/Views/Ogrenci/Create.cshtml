@model Ogrenci

@{
    ViewData["Title"] = "Öğrenci Ekle";
}

<h2 class="mb-3">Öğrenci Ekle</h2>
<hr>

<form asp-controller="Ogrenci" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="OgrenciAd" class="form-label">Öğrenci Adı</label>
        <input asp-for="OgrenciAd" class="form-control">
            
        <label asp-for="OgrenciSoyad" class="form-label mt-3">Öğrenci Soyadı</label>
        <input asp-for="OgrenciSoyad" class="form-control">
            
        <label asp-for="Eposta" class="form-label mt-3">Eposta</label>
        <input asp-for="Eposta" class="form-control">
            
        <label asp-for="Telefon" class="form-label mt-3">Telefon</label>
        <input asp-for="Telefon" class="form-control">
    </div>
        <button type="submit" style="background-color: #FADA7A;" class="btn mt-2">Kaydet</button>
</form>