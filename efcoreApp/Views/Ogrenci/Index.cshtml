@model IEnumerable<Ogrenci>

@{
    ViewData["Title"] = "Öğrenciler";
}

<h2 class="mb-3">Öğrenciler</h2>
<hr>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td style="width: 100px;">@Html.DisplayNameFor(m => m.OgrenciId)</td>
            <td>@Html.DisplayNameFor(m => m.OgrenciAd)</td>
            <td>@Html.DisplayNameFor(m => m.OgrenciSoyad)</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.OgrenciId)</td>
                <td>@Html.DisplayFor(modelItem => item.OgrenciAd)</td>
                <td>@Html.DisplayFor(modelItem => item.OgrenciSoyad)</td>
                <td style="width: 200px;">
                    <a asp-controller="Ogrenci" asp-action="Edit" asp-route-id="@item.OgrenciId" style="width: 100px; background-color: #CAE8BD" class="btn btn-sm btn-hover">Güncelle</a>
                    <a asp-controller="Ogrenci" asp-action="Delete" asp-route-id="@item.OgrenciId" style="width: 75px; background-color: #FFC7A7" class="btn btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>