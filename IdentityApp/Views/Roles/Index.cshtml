@model IEnumerable<AppRole>

<div class="row">
    <div class="col-10">
        <h2>Role List</h2>
    </div>
    <div class="col-2 text-end">
        <a class="btn text-success-emphasis bg-success-subtle border border-success btn-sm" asp-action="Create">Create Role</a>
    </div>
</div>
<hr>

<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Role Name</th>
        <th>Users</th>
        <th style="width: 125px;">Options</th>
    </tr>

    @if(Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">No Role!</td></tr>
    }

    @foreach(var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td asp-role-users="@role.Id"></td>
            <td>
                <form method="post">
                    <a class="btn text-primary-emphasis bg-primary-subtle border border-primary btn-sm">Edit</a>
                    <button type="submit" class="btn btn-sm text-danger-emphasis bg-danger-subtle border border-danger">Delete</button>
                </form>
            </td>
        </tr>
    }

</table>