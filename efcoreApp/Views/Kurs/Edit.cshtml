@model KursViewModel 

@{
    ViewData["Title"] = "Kurs Düzenle";
}

<div class="row">
    <div class="col-8">
        <h2 class="mb-3">Kurs Güncelle</h2>
        <hr>
        <form asp-controller="Kurs" asp-action="Edit" method="post">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="KursId">
            <div class="mb-3">
                <label asp-for="Baslik" class="form-label">Kurs Adı</label>
                <input asp-for="Baslik" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="OgretmenId" class="form-label">Öğretmen</label>
                <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-select">
                    <option value="">Seçiniz</option>
                </select>
            </div>
            <button type="submit" class="btn mt-2" style="background-color: #CAE8BD;">Güncelle</button>
        </form>
    </div>
    <div class="col-4">
        <h2>Kursa Kayıtlı Öğrenciler</h2>
        <hr>
        <ul>
            @foreach(var item in @Model.KursKayitları)
            {
                <li>@item.Ogrenci.AdSoyad</li>
            }
        </ul>
    </div>
</div>